# Grafana 설정
GRAFANA_URL=
GRAFANA_API_KEY=
GRAFANA_DATASOURCE_UID=

# Grafana 쿼리 설정
GRAFANA_LOG_QUERY=
GRAFANA_LOOKBACK_WINDOW=
GRAFANA_QUERY_INTERVAL=

# Claude Code 설정
# Claude Code CLI를 사용하므로 별도 API 키 불필요
# Claude Code가 설치되어 있고 로그인되어 있어야 함
CLAUDE_CODE_PATH=
WORKING_DIR=

# Claude Code 권한 설정
# 옵션: acceptAll, acceptEdits, reject
CLAUDE_PERMISSION_MODE=acceptEdits
# 허용할 도구 목록 (쉼표로 구분, 비워두면 모든 도구 허용)
# 예: Bash,Read,Write,Git
CLAUDE_ALLOWED_TOOLS=

# 소스맵 설정
# 예: ./workspace/target/static/js
SOURCE_MAP_DIR=

# 자동 수정 설정
AUTO_FIX_ENABLED=
AUTO_FIX_DRY_RUN=
AUTO_FIX_MANUAL_APPROVAL=
MAX_FIXES_PER_RUN=
MIN_INTERVAL_BETWEEN_FIXES=

# Git 설정
GIT_AUTO_COMMIT=
GIT_BRANCH=
GIT_CREATE_PR=
GIT_COMMIT_PREFIX=

# 로깅 설정
LOG_LEVEL=
LOG_FILE=

# Slack 알림 (선택사항)
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=

# CCUsage 설정 (선택사항)
USE_CCUSAGE=
